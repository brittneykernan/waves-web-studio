---
import Image from '@/partials/Image.astro';

type Props = {
  alt: string,
  description: string,
  href: string
  title: string,
  src: string, 
  className?: string,
};

const { alt, title: pTitle, src, description: pDescription, href, className } = Astro.props;
---
<a
  href={href}
  title={pTitle}
  class={`useCustomCursor flex flex-col gap-2 ${className}`}
>
  <div class="h-85 overflow-hidden rounded-xl">
    <Image
      src={src}
      alt={alt}
      className="transition-transform duration-700 hover:scale-110 object-cover object-center h-full"
    />
  </div>
  <div class="mt-2 flex text-lg">
    <h3 class="w-1/3">{pTitle}</h3>
    <p class="w-1/2">{pDescription}</p>
  </div>
</a>
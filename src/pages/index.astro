---
import type { IFrontmatter } from 'astro-boilerplate-components';

import projects from '@/data/projects';
import { CTA } from '@/partials/CTA';
import WaveButton from '@/partials/WaveButton.astro';
import { Hero } from '@/partials/Hero';
import Image from '@/partials/Image.astro';
import { ProjectList } from '@/partials/ProjectList';
import { RecentPosts } from '@/partials/RecentPosts';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';
import { sortByDate } from '@/utils/Posts';

const allPosts = await Astro.glob<IFrontmatter>('./posts/*.md');
const sortedPosts = sortByDate(allPosts);
const lastThreePosts = sortedPosts.slice(0, 3);

const { description, title } = AppConfig;
---

<Base head={{ title, description }}>
  <Hero client:load>
    <h2
      class='staggered w-[610px] pb-10 text-xl leading-6 tracking-tighter opacity-0 md:text-3xl xl:w-[730px] xl:text-4xl'
    >
      A Brooklyn-based studio specializing in front-end services for startups
      and small businesses.
    </h2>
    <WaveButton>
      Let's Chat
    </WaveButton>
  </Hero>
  <ProjectList client:load>
    {projects.map(
      ({ alt, title: pTitle, src, description: pDescription, href }) => (
        <a
          href={href}
          title={pTitle}
          class="fadeUpIn flex flex-col gap-2 opacity-0"
        >
          <div class=" overflow-hidden rounded-xl">
            <Image
              src={src}
              alt={alt}
              className="transition-transform duration-700 hover:scale-125"
            />
          </div>
          <div class="mb-12 mt-2 flex text-lg md:pb-20">
            <h3 class="w-1/3">{pTitle}</h3>
            <p class="w-1/2">{pDescription}</p>
          </div>
        </a>
      )
    )}
  </ProjectList>

  <RecentPosts postList={lastThreePosts} />
  <CTA />
</Base>

<script>
import { customEase } from "@/utils/Animation";
import gsap from "gsap";

const getY = (index) => {
  return 25*(index+1)
}

    gsap.from('.fadeUpIn', {
      opacity: 0,
      y: getY,
      stagger: 0.1,
      duration: 1.5,
      ease: customEase,
      delay: 1.2,
    });

</script>
